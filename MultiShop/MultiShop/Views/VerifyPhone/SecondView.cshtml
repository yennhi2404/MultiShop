
@model MultiShop.Models.InputModel
@{
    ViewData["Title"] = "Verify phone number";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("OnPost", "VerifyPhone", FormMethod.Post))
        {
            <p>
               Có lỗi xảy ra. Vui lòng nhập số điện thoại hợp lệ và code phone hợp lệ!!
            </p>
            <div class="form-group">
                @Html.LabelFor(m => m.DialingCode, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.DialingCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DialingCode)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send verification code" class="btn btn-default" />
                </div>
            </div>


        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

